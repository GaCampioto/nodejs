<html>
	<body>
		<form action="/produtos/delete" method="post">
			<div>
				<label for="id">Id</label>
				<input type="text" id="id"
				name="id" placeholder="coloque o titulo do livro"/>
			</div>
			<div>
				<label for="titulo">Titulo</label>
				<input type="text" id="titulo"
				name="titulo" placeholder="coloque o titulo do livro"/>
			</div>

			<div>
				<label for="preco">Preco</label>
				<input type="text" id="preco" 
				name="preco" placeholder="39.90"/>
			</div>

			<div>
				<label for="descricao">Descricao</label>
				<textarea cols="20" rows="10" name="descricao" id="descricao" placeholder="fale sobre o titulo"></textarea>
			</div>
			<input type="submit" value="Deletar!"/>
		</form>
	</body>
</html>